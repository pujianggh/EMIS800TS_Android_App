<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="@color/color_black_bg" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <!-- 此处定义只有上下两边有边框 高度为1像素-->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <!--边框里面背景颜色 白色-->
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>