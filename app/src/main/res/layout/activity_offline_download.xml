<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical"
    android:background="@color/common_white_bg">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout style="@style/MatchMatch">

        <ScrollView
            style="@style/MatchMatch"
            android:overScrollMode="never"
            android:layout_above="@+id/btn_next"
            android:scrollbars="none">

            <LinearLayout
                style="@style/MatchWrap.Vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rly_deviceInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_deviceInfo" />

                    <TextView
                        android:id="@+id/tv_deviceState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_deviceTypeInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_deviceTypeInfo" />

                    <TextView
                        android:id="@+id/tv_deviceTypeState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_locationInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_locationInfo" />

                    <TextView
                        android:id="@+id/tv_locationState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_departmentInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_departmentInfo" />

                    <TextView
                        android:id="@+id/tv_departmentState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_priorityInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_priorityInfo" />

                    <TextView
                        android:id="@+id/tv_priorityState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_workProcessInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_workProcessInfo" />

                    <TextView
                        android:id="@+id/tv_workProcessState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_serverTypeInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_serverTypeInfo" />

                    <TextView
                        android:id="@+id/tv_serverTypeState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/item_dp15"
                    android:layout_marginRight="@dimen/item_dp15"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/rly_demandTypeInfo"
                    style="@style/LinearLayout_Child_Style">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp15"
                        android:text="@string/text_set_download_demandTypeInfo" />

                    <TextView
                        android:id="@+id/tv_demandTypeState"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:text="@string/text_set_download_state_und"
                        android:textColor="@color/red_text2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_next"
            style="@style/Button_Common_Style_Black"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/item_dp15"
            android:text="@string/text_set_download_state_alld" />
    </RelativeLayout>
</LinearLayout>