<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical"
    android:background="@color/color_black_bg">

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        style="@style/MatchMatch"
        android:layout_above="@+id/lly_bottom"
        android:layout_below="@+id/layout_titleBar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout style="@style/MatchMatch.Vertical">

            <TextView
                style="@style/Text_MatchWrap_Style"
                android:layout_marginLeft="@dimen/item_dp10"
                android:layout_marginRight="@dimen/item_dp10"
                android:text="@string/text_work_order_create_jbxx"
                android:textColor="@color/white" />

            <LinearLayout
                style="@style/MatchWrap.Vertical"
                android:background="@color/white"
                android:visibility="visible">

                <RelativeLayout
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        android:id="@+id/tv_sqrTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_sqr" />

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/spacing_min"
                        android:layout_toRightOf="@+id/tv_sqrTip"
                        android:text="*"
                        android:textColor="@color/red_text" />

                    <TextView
                        android:id="@+id/tv_createrName"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        android:id="@+id/tv_lxrdhTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_lxdh" />

                    <TextView
                        android:layout_toRightOf="@+id/tv_lxrdhTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/spacing_min"
                        android:text="*"
                        android:textColor="@color/red_text" />

                    <EditText
                        android:id="@+id/edt_phoneNumber"
                        style="@style/Edit_MatchWrap_Style"
                        android:layout_width="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/item_dp100"
                        android:layout_marginRight="@dimen/item_dp15"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textCursorDrawable="@drawable/cursor_color_red" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    android:id="@+id/rly_department"
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_bm" />

                    <TextView
                        android:id="@+id/tv_department"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/item_dp20"
                        android:layout_height="@dimen/item_dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:background="@drawable/icon_indicator2" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    android:id="@+id/rly_location"
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        android:id="@+id/tv_wzTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_wz" />

                    <TextView
                        android:layout_toRightOf="@+id/tv_wzTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/spacing_min"
                        android:text="*"
                        android:textColor="@color/red_text" />

                    <TextView
                        android:id="@+id/tv_location"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/item_dp20"
                        android:layout_height="@dimen/item_dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:background="@drawable/icon_indicator2" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    android:id="@+id/rly_workOrderType"
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        android:id="@+id/tv_gdlxTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_gdlx" />

                    <TextView
                        android:layout_toRightOf="@+id/tv_gdlxTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/spacing_min"
                        android:text="*"
                        android:textColor="@color/red_text" />

                    <TextView
                        android:id="@+id/tv_workOrderType"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/item_dp20"
                        android:layout_height="@dimen/item_dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:background="@drawable/icon_indicator2" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    android:id="@+id/rly_serverType"
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        android:id="@+id/tv_wflxTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_fwlx" />

                    <TextView
                        android:layout_toRightOf="@+id/tv_wflxTip"
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/spacing_min"
                        android:text="*"
                        android:textColor="@color/red_text" />

                    <TextView
                        android:id="@+id/tv_serverType"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/item_dp20"
                        android:layout_height="@dimen/item_dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:background="@drawable/icon_indicator2" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    android:id="@+id/rly_priority"
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_yxj" />

                    <TextView
                        android:id="@+id/tv_priority"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/item_dp20"
                        android:layout_height="@dimen/item_dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:background="@drawable/icon_indicator2" />
                </RelativeLayout>

                <View style="@style/View_Line_Common_Style" />

                <RelativeLayout
                    android:id="@+id/rly_yuyueTime"
                    style="@style/LinearLayout_Child_Style"
                    android:layout_height="@dimen/item_dp45">

                    <TextView
                        style="@style/Text_Common_Style"
                        android:layout_marginLeft="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_yysj" />

                    <TextView
                        android:id="@+id/tv_yuyueTime"
                        style="@style/Text_Common_Style"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp25"
                        android:text="13:00-15:00" />

                    <ImageView
                        android:layout_width="@dimen/item_dp20"
                        android:layout_height="@dimen/item_dp20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:background="@drawable/icon_indicator2"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    style="@style/View_Line_Common_Style"
                    android:layout_height="1px"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@color/line_lightgray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_device"
                style="@style/MatchMatch.Vertical"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    style="@style/Text_MatchWrap_Style"
                    android:layout_marginLeft="@dimen/item_dp10"
                    android:layout_marginRight="@dimen/item_dp10"
                    android:text="@string/text_work_order_create_gzsb"
                    android:textColor="@color/text_gray" />

                <LinearLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/spacing_min"
                    android:paddingTop="@dimen/spacing_min">

                    <com.android.ts.emis.view.ExpandListView
                        android:id="@+id/lv_list_data"
                        style="@style/MatchWrap"
                        android:background="@null"
                        android:divider="@drawable/ic_line_list_divider"
                        android:dividerHeight="0dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/MatchMatch.Vertical"
                android:visibility="visible">

                <TextView
                    style="@style/Text_MatchWrap_Style"
                    android:layout_marginLeft="@dimen/item_dp10"
                    android:layout_marginRight="@dimen/item_dp10"
                    android:text="@string/text_work_order_create_wtms"
                    android:textColor="@color/white" />

                <RelativeLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/item_dp180">

                    <EditText
                        android:id="@+id/edt_content"
                        style="@style/Edit_MatchWrap_Style2"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/spacing_min"
                        android:layout_marginRight="@dimen/spacing_min"
                        android:background="@color/white"
                        android:hint="@string/text_work_order_create_hint_qsrnr"
                        android:inputType="textMultiLine"
                        android:paddingBottom="@dimen/item_dp30"
                        android:paddingTop="@dimen/item_dp10"
                        android:textCursorDrawable="@drawable/cursor_color_red" />

                    <TextView
                        android:id="@+id/tv_contentTip"
                        style="@style/Text_MatchWrap_Style"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_dp10"
                        android:paddingBottom="@dimen/item_dp10"
                        android:text="@string/text_work_order_create_tip_nr"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textSize_12" />

                    <View
                        style="@style/View_Line_Common_Style"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="@color/line_lightgray" />
                </RelativeLayout>

                <LinearLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                        android:id="@+id/snpl_moment_add_photos"
                        style="@style/MatchWrap"
                        android:layout_margin="10dp"
                        app:bga_snpl_deleteDrawable="@drawable/icon_delete_red_normal"
                        app:bga_snpl_deleteDrawableOverlapQuarter="false"
                        app:bga_snpl_editable="true"
                        app:bga_snpl_itemCornerRadius="0dp"
                        app:bga_snpl_itemSpanCount="4"
                        app:bga_snpl_itemWhiteSpacing="4dp"
                        app:bga_snpl_itemWidth="0dp"
                        app:bga_snpl_maxItemCount="9"
                        app:bga_snpl_otherWhiteSpacing="10dp"
                        app:bga_snpl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
                        app:bga_snpl_plusDrawable="@drawable/icon_take_photo_focus"
                        app:bga_snpl_plusEnable="true"
                        app:bga_snpl_sortable="true" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/igv_addDevice"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/item_dp65"
        android:layout_marginRight="@dimen/item_dp10"
        android:src="@drawable/selector_workorder_create_add"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lly_bottom"
        style="@style/MatchWrap.Vertical"
        android:layout_height="@dimen/item_dp50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_next"
            style="@style/Button_Common_Style_Black"
            android:layout_marginLeft="@dimen/item_dp10"
            android:layout_marginRight="@dimen/item_dp10"
            android:text="@string/text_button_tj" />
    </LinearLayout>
</RelativeLayout>