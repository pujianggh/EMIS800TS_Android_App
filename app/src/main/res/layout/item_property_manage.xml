<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_item"
    style="@style/MatchWrap.Vertical"
    android:background="@drawable/selector_line_bg"
    android:paddingBottom="@dimen/item_dp10"
    android:paddingTop="@dimen/item_dp10">

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/spacing_min"
        android:layout_marginRight="@dimen/spacing_min"
        android:layout_marginTop="@dimen/spacing_min">

        <TextView
            android:id="@+id/tv_message"
            style="@style/Text_WrapWrap_Style"
            android:layout_margin="@dimen/spacing_min"
            android:text="1#监视中心管理服务"
            android:textColor="@color/text_deepgray"
            android:textSize="@dimen/textsize_normalplus" />

        <TextView
            android:id="@+id/tv_state"
            style="@style/Text_WrapWrap_Style"
            android:layout_width="@dimen/item_dp45"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/spacing_min"
            android:background="@color/color_green"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="在用"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_supersmall" />
    </RelativeLayout>

    <LinearLayout style="@style/MatchWrap.Vertical">

        <LinearLayout
            style="@style/MatchWrap"
            android:paddingLeft="@dimen/spacing_min"
            android:paddingRight="@dimen/spacing_min">

            <TextView
                style="@style/Text_WrapWrap_Style"
                android:layout_margin="@dimen/spacing_min"
                android:gravity="center_vertical"
                android:text="系统分类:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normalplus" />

            <TextView
                android:id="@+id/tv_systemClass"
                style="@style/Text_WrapWrap_Style"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/spacing_min"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text=""
                android:textColor="@color/text_deepgray"
                android:textSize="@dimen/textsize_normalplus" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:paddingLeft="@dimen/spacing_min"
            android:paddingRight="@dimen/spacing_min">

            <TextView
                style="@style/Text_WrapWrap_Style"
                android:layout_margin="@dimen/spacing_min"
                android:gravity="center_vertical"
                android:text="安装位置:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normalplus" />

            <TextView
                android:id="@+id/tv_instalLosition"
                style="@style/Text_WrapWrap_Style"
                android:layout_margin="@dimen/spacing_min"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingRight="@dimen/spacing_min"
                android:text=""
                android:textColor="@color/text_deepgray"
                android:textSize="@dimen/textsize_normalplus" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>